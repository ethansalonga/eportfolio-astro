---
import { Image } from 'astro:assets'
import PersonalLogo from '../images/personal-logo.svg'
---

<header>
  <nav>
    <figure>
      <Image src={PersonalLogo} alt='Ethan Salonga personal logo' class='w-12 h-12' />
    </figure>
    <ul class='flex'>
      <li class='mx-3 cursor-pointer hidden sm:list-item'>
        <a href='#' class='text-242424 font-bold relative link-hover-effect link-hover-effect--black'>
          About
        </a>
      </li>
      <li class='mx-3 cursor-pointer hidden sm:list-item'>
        <a href='#projects' class='text-242424 font-bold relative link-hover-effect link-hover-effect--black'>
          Projects
        </a>
      </li>
      <li class='mx-3 cursor-pointer hidden sm:list-item'>
        <a href='#' class='text-242424 font-bold relative link-hover-effect link-hover-effect--black'>
          Contact
        </a>
      </li>
      <li class='mx-3 cursor-pointer hidden sm:list-item click'>
        <a href='#' class='text-242424 font-bold relative link-hover-effect link-hover-effect--black'>
          Contact
        </a>
      </li>
    </ul>
  </nav>
</header>

<style>
  .link-hover-effect:after {
    content: '';
    position: absolute;
    bottom: -3px;
    height: 3px;
    width: 0;
    right: 0;
    background-color: black;
    transition: all 300ms ease;
  }

  .link-hover-effect--white:after {
    background-color: #fff;
  }

  .link-hover-effect--black:after {
    background-color: #242424;
  }

  .link-hover-effect:hover:after {
    left: 0;
    width: 100%;
  }

  .click {
    cursor: pointer;
    transition: all 300ms ease;
  }

  .click:hover {
    transform: scale(1.1);
  }

  .click:active {
    transform: scale(0.8);
  }
</style>