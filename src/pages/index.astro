---
import BaseLayout from '../layouts/BaseLayout.astro'
import Modal from '../components/modal/Modal.astro'
import Landing from '../components/landing/Landing.astro'
import Projects from '../components/projects/Projects.astro'
import '../styles/global.css'

const pageTitle = 'Ethan Salonga | Technical Writer'
const pageDescription = 'Welcome to Ethan Salonga\'s eportfolio â€“ explore my journey as a technical writer, web developer, and storyteller. Discover my projects, blog, and creative works that bring ideas to life.'
---

<BaseLayout pageTitle={pageTitle} pageDescription={pageDescription}>
	<Modal />
	<Landing />
  <Projects />
</BaseLayout>

<script>
  import { isModalOpen } from '../store'

  function toggleModal() {
    if (isModalOpen.get()) {
      isModalOpen.set(false)
      return document.body.classList.remove('modal--open')
    }
    isModalOpen.set(true)
    document.body.classList.add('modal--open')
  }
  document.getElementById('about-me')?.addEventListener('click', toggleModal)
  document.getElementById('mail-btn')?.addEventListener('click', toggleModal)
</script>
